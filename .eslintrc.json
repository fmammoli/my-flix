{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": ["eslint:recommended","plugin:jest/recommended"],
    "plugins": [
        "jest"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error"
    }
}